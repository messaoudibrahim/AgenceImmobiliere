{% extends 'base.html.twig' %}

{% block title %}Option{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Option</h1>
        <table class="table table-striped">
            <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ option.id }}</td>
            </tr>
            <tr>
                <th>Option</th>
                <td>{{ option.name }}</td>
            </tr>
            </tbody>
        </table>

        <div class="row">
            <div class="col-md-4">
                <a href="{{ path('option_index') }}" class="btn btn-info">Revien a la liste</a>
            </div>
            <div class="col-md-4">
                <a href="{{ path('option_edit', {'id': option.id}) }}" class="btn btn-primary">Modifier</a>
            </div>
            <div class="col-md-4">
                {{ include('admin/option/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
